<form action='/adminRegister'  method ="POST">
    <div class="container">
      <h1>Register</h1>
      <p>Please fill in this form to create an account.</p>
      <hr>
      <label for="email"><b>Email</b></label>
      <input type="text" placeholder="Enter Email" name="email" id="email" required>
  
      <label for="password"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="password" id="password" required>
  
      <label for="password-repeat"><b>Repeat Password</b></label>
      <input type="password" placeholder="Repeat Password" name="password-repeat" id="password-repeat" required>
      <hr>
  
    <label>Name: </label>
    <input type="text" placeholder="Enter your Bike Name" name="name"><br><br>
    <label>company: </label>
    <input type="text" placeholder="" name="company"><br><br>
    <label>FuelType: </label>
    <input type="text" placeholder="" name="FuelType"><br><br>
    <label>capacity: </label>
    <input type="text" placeholder="" name="capacity"><br><br>

      <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
      <button type="submit" class="registerbtn">Admin Register</button>
    </div>
  
    <div class="container signin">
      <p>Already have an account? <a href="/adminLogin">Sign in</a>.</p>
    </div>
  </form>