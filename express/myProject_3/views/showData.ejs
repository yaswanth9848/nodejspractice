<%- include ('./partials/header')-%>
<html>
  <head>
  <style>
    table, th, td {
      border: 1px solid rgb(138, 12, 12);
      border-collapse: collapse;
    }
    th, td {
      background-color: #96D4D4;
    }
</style>
</head>
<body> 
 . <a href = '/openForm'>Click to Add New Data</a><br>
 .<a href = '/register'>Register Form</a><br>
 .<a href = '/logout'>Logout</a>
 
<form method = 'GET' id = 'form' action ='/getDataToBeUpdated'>
<table>
    <tr>
       <th>name</th>
       <th>company</th>
       <th>FuelType</th>
       <th>capacity</th>
       <th>Update</th>
       <th style="color:rgb(255, 0, 0)">Delete</th>
    </tr>
 
    <% for (let i = 0; i < data.length; i++) { %>
     <tr>
       <td style="color:rgb(162, 0, 255)"><%= data[i].name %></td>
       <td><%= data[i].company %></td>
       <td><%= data[i].FuelType %></td>
       <td><%= data[i].capacity %></td>
       <td><button name ="update" value ="<%=data[i].name%>">update</button></td>
       <td><a href = "/deleteData?name=<%=data[i].name%>">Delete Entry</a></td>
     </tr>    
    <% } %>
 </table>
 </form>

 
</body>
</html>